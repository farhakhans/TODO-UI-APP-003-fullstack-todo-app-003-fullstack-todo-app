# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080

# Use local API routes when deployed to Vercel (set to "true" on Vercel for self-contained deployment)
NEXT_PUBLIC_USE_LOCAL_ROUTES=false

# Authentication Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Database Configuration (if needed)
NEXT_PUBLIC_DATABASE_URL=

# For Vercel deployment with mock backend (no external backend needed):
# Set NEXT_PUBLIC_USE_LOCAL_ROUTES=true
# Leave NEXT_PUBLIC_API_URL empty or set to any value (it won't be used when USE_LOCAL_ROUTES=true)